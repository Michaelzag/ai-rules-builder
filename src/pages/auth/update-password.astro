---
import Layout from '../../layouts/Layout.astro';
import AuthLayout from '../../components/auth/AuthLayout';
import VerifyPasswordResetForm from '../../components/auth/VerifyPasswordResetForm';
import { isFeatureEnabled } from '../../features/featureFlags';

// Check if auth feature is enabled
if (!isFeatureEnabled('auth')) {
  return Astro.redirect('/');
}
---

<Layout>
  <div class="flex flex-col h-screen max-h-screen bg-gray-950">
    <main class="flex-grow">
      <AuthLayout title="Update Your Password" subtitle="Enter and confirm your new password">
        <VerifyPasswordResetForm client:only="react" />
      </AuthLayout>
    </main>
  </div>
</Layout>
